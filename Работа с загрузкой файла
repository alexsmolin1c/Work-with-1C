// Настя из почты фрагмент получаем файлы из хранилища или из сервера					
Если ДД = Неопределено Тогда 
						КаталогХранения = Константы.КаталогХраненияПрикрепляемыхФайловНаСервере.Получить();
						Если Прав(КаталогХранения, 1) <> "\" Тогда
							КаталогХранения = КаталогХранения + "\";
						КонецЕсли;  
						ИмяФайла = Прав(Ф.Путь, СтрДлина(Ф.Путь) - ПозицияПоследнегоСлеша);
						ПозицияТочки = СтрНайти(ИмяФайла, ".", НаправлениеПоиска.СКонца);
						Расширение = Прав(ИмяФайла, СтрДлина(ИмяФайла) - ПозицияТочки + 1);
						ФайлНаСервере = Новый Файл(КаталогХранения + ф.УИД + Расширение);
						Если ФайлНаСервере.Существует() Тогда
							ДД = Новый ДвоичныеДанные(ФайлНаСервере.ПолноеИмя);              
							ДД.Записать(КаталогСохранения + "\" + ИмяФайла);	
						КонецЕсли;	
					Иначе	
						ИмяФайла = Прав(Ф.Путь, СтрДлина(Ф.Путь) - ПозицияПоследнегоСлеша);
						ДД.Записать(КаталогСохранения + "\" + ИмяФайла);
					КонецЕсли;
