     Статус = "";
Пока Результат.Следующий() Цикл 
	Наименование = Результат.Наименование; 
	Статус = Результат.Статус;
	Если НРег(Наименование) = ИмяДруга Тогда
		Сообщение("Друг найден");  
	    Прервать;
	КонецЕсли;
	КонецЦикла;  
	Возврат Статус;
